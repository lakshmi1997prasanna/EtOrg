<aura:component >
	<aura:attribute name="acc" type="Account[]"/>
    <aura:attribute name="tableindex" type="String"/>
    <aura:registerEvent name="BGHTable" type="c:ChildInlineedit_Event"/>
    <tr class="slds-hint-parent">
        <th scope="row" data-label="Edit">
            <div class="slds-truncate" title="Remove">
                <a data-record="{!index}" onclick="{!c.Edit}">Edit</a>
            </div>
        </th>
        <th scope="row" data-label="Name">
            <div class="slds-truncate" title="Name">{!v.acc.Name}</div>
        </th>
        <th scope="row" data-label="Phone">
            <div class="slds-truncate" title="Phone">{!v.acc.Phone}</div>
        </th>
    </tr>
</aura:component>